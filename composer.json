{
	"name": "michael-bender/laravel-vagrant-bootstrap",
	"description": "Bootstrap The Laravel Framework with vagrant, grunt, gulp, bower and other nice tools.",
	"keywords": ["framework", "laravel","vagrant"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.1.*",
        "mccool/laravel-auto-presenter": "*"
	},
    "require-dev": {
        "way/generators":"*",
        "phpunit/phpunit":"3.7.27",
        "mockery/mockery":"0.9.*@dev"
    },
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
